<UserControl x:Class="SerienPlaner.Controls.DoubleLabel"
             x:Name="ucDoubleLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SerienPlaner.Controls"
             mc:Ignorable="d" d:DesignWidth="300" Background="Black">
    <Grid VerticalAlignment="Top">
        <DockPanel>
            <Label x:Name="DataGridTitle" Content="{Binding ElementName=ucDoubleLabel, Path=LabelContent}" VerticalAlignment="Top" DockPanel.Dock="Left" Foreground="White" Height="26"/>
            <TextBox x:Name="VerticallyExpandMe" Text="{Binding ElementName=ucDoubleLabel, Path=TextContent}" VerticalContentAlignment="Center" Background="Transparent" BorderBrush="Transparent" IsManipulationEnabled="False" TextWrapping="Wrap" Foreground="White" Focusable="False" IsHitTestVisible="False" AllowDrop="False"/>
        </DockPanel>
    </Grid>
</UserControl>
